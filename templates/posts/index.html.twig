{% extends 'base.html.twig' %}

{% block title %} {{ post.title }} {% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto mt-5 px-4">
        <h1 class="text-3xl font-bold mb-4">{{ post.title }}</h1>
        <p class="italic text-gray-600">Publi√© le {{ post.createdAt|date('d/m/Y') }} par {{ post.author }}</p>
        <div class="mt-4">
            <p class="leading-relaxed">{{ post.content|nl2br }}</p>
        </div>
        <p class="mt-5 underline text-blue-600 hover:text-blue-800">
            <a href="{{ path('app_actus') }}">‚Üê Retour aux articles</a>
        </p>
    </div>

    <div class="max-w-4xl mx-auto mt-8 px-4">
        <h2 class="text-2xl font-semibold">Commentaires</h2>

        {% if app.user %}
            <div class="mt-4">
                {{ form_start(commentForm, {'attr': {'class': 'space-y-4'}}) }}
                {{ form_row(commentForm.content, {'attr': {'class': 'w-full p-2 border rounded-md'}}) }}
                {{ form_row(commentForm.submit, {'attr': {'class': 'bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700'}}) }}
                {{ form_end(commentForm) }}
            </div>
        {% else %}
            <p class="mt-4 text-gray-700">
                <a href="{{ path('app_login') }}" class="text-blue-600 hover:text-blue-800">Connectez-vous</a> pour poster un commentaire.
            </p>
        {% endif %}

        {% for comment in comments %}
            <div class="border p-4 mt-4 rounded-md bg-gray-100">
                <p class="font-semibold">{{ comment.user.username }} - <span class="text-sm text-gray-500">{{ comment.createdAt|date('d/m/Y H:i') }}</span></p>
                <p class="mt-2">{{ comment.content }}</p>
                <form action="{{ path('app_comment_report', {'id': comment.id}) }}" method="post" class="inline-block mt-2">
                    <button type="submit" class="bg-red-500 text-white text-sm px-3 py-1 rounded-md hover:bg-red-600">üö® Signaler</button>
                </form>
            </div>
        {% else %}
            <p class="mt-4 text-gray-600">Aucun commentaire pour l'instant.</p>
        {% endfor %}

        <p class="mt-6 text-gray-700">Un commentaire d√©plaisant ? Signalez-le !</p>
    </div>
{% endblock %}