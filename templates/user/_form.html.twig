{{ form_start(form) }}
    <div class="space-y-4">
        {% for field in form %}
            <div class="flex flex-col">
                <!-- Use form_label to render the label -->
                <label for="{{ field.vars.id }}" class="text-sm font-medium text-[#5048E5] mb-2">
                    {{ form_label(field) }}
                </label>
                <!-- Use form_widget to render the input fields -->
                {{ form_widget(field, {
                    'attr': {
                        'class': 'mt-1 block w-full px-4 py-2 border border-purple-300 rounded-none focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500'
                    }
                }) }}
            </div>
        {% endfor %}
    </div>
    
    <div class="mt-6">
        <button type="submit" 
            class="w-full px-4 py-2 font-bold text-white bg-purple-600 rounded-none shadow-md hover:bg-purple-700">
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}
