{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
    <div class="container p-6 mx-auto">
        <h1 class="text-3xl font-bold text-[#5048E5] mb-6">User Index</h1>

        <div class="mb-4">
            <a href="{{ path('app_user_new') }}" class="bg-[#5048E5] text-white px-4 py-2  hover:bg-[#403ac4] transition">
                Create New User
            </a>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full overflow-hidden bg-white border border-gray-200 shadow-md">
                <thead class="bg-[#5048E5] text-white border-b">
                    <tr>
                        <th class="px-4 py-2 text-left">ID</th>
                        <th class="px-4 py-2 text-left">Name</th>
                        <th class="px-4 py-2 text-left">Email</th>
                        <th class="px-4 py-2 text-left">Password</th>
                        <th class="px-4 py-2 text-left">Roles</th>
                        <th class="px-4 py-2 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="transition border-b hover:bg-gray-50">
                            <td class="px-4 py-2">{{ user.id }}</td>
                            <td class="px-4 py-2">{{ user.name }}</td>
                            <td class="px-4 py-2">{{ user.email }}</td>
                            <td class="max-w-xs px-4 py-2 truncate">{{ user.password }}</td>
                            <td class="px-4 py-2">{{ user.roles ? user.roles|join(', ') : '' }}</td>
                            <td class="px-4 py-2">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-[#5048E5] hover:underline mr-2">Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-[#5048E5] hover:underline">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="py-4 text-center text-gray-500">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
