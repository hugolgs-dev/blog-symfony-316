{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block body %}
    <div class="container max-w-lg p-6 mx-auto">
        <div class="flex items-center justify-between">
            <!-- Back to list as an arrow -->
            <a href="{{ path('app_user_index') }}" 
               class="text-3xl text-purple-600 hover:text-purple-800">
                &larr; 
            </a>
        </div>

        <h1 class="mb-6 text-2xl font-bold text-purple-700">Create New User</h1>

        <div class="p-6 bg-white rounded-lg shadow-md">
            <!-- Form for creating a new user -->
            {{ form_start(form) }}
                <div class="space-y-4">
                    {% for field in form %}
                        <div class="flex flex-col">
                            <label for="{{ field.vars.id }}" class="text-sm font-medium text-[#5048E5] mb-2">{{ field.vars.label }}</label>
                            {{ form_widget(field, {
                                'attr': {
                                    'class': 'mt-1 block w-full px-4 py-2 border border-purple-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500'
                                }
                            }) }}
                        </div>
                    {% endfor %}
                </div>

                <div class="mt-6">
                    <button type="submit" 
                        class="w-full px-4 py-2 font-bold text-white bg-purple-600 rounded-md shadow-md hover:bg-purple-700">
                        Create User
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
